<div class= "container">
  <%= form_with model: @flat do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %> <br>
    <%= f.label :address %><br>
    <%= f.text_field :address %> <br>
    <%= f.label :description %><br>
    <%= f.text_field :description %> <br>
    <%= f.label :price_per_night %><br>
    <%= f.text_field :price_per_night%> <br>
    <%= f.label :number_of_guests %><br>
    <%= f.text_field :number_of_guests%> <br>
    <%= f.submit "Add a new flat", class: "btn btn-primary" %>
  <% end %>
</div>
